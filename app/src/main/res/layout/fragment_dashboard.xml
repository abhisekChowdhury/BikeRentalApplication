<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".Fragments.DashboardFragment">

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="124dp"
        android:layout_height="114dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:padding="10dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconSize="80dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Bello!"
            />

        <TextView
            android:id="@+id/welcomeUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Welcome User"
            />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/bello_logos_white"/>

        <Button
            android:id="@+id/bikerButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/cornerbtn"
            android:text="Biker"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/vendorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/cornerbtn"
            android:text="Vendor"
            app:layout_constraintBottom_toTopOf="@+id/timerButton" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timerButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Start Ride (Timer)"
                android:background="@drawable/cornerbtn"
                android:layout_margin="2dp"
                />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/cornerbtn"
                android:text="Logout"
                android:layout_margin="2dp"
                />

            <Button
                android:id="@+id/btnWeather"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/cornerbtn"
                android:text="Weather"
                android:layout_margin="2dp"
                />

        </LinearLayout>





    </LinearLayout>


</FrameLayout>